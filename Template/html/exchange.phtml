<div class="popup-box">
    <div class="popup">
        <div class="head clearfix">
            <img src="{$CDN_BASE_URL_RES}/html/images/sign/close.jpg" class="close f-fr f-csp">
        </div>
        <img src="{$CDN_BASE_URL_RES}/html/images/sign/icon1.jpg" class="icon">
        <p class="f-tac">恭喜您成功兑换礼品<br>稍后会有客服人员联系</p>
        <!-- <p class="f-tac">您的积分不足<br>去做任务赚积分</p> -->
        <div class="footer f-tac"><span class="confirm">完成兑换</span></div>
        <!-- <div class="footer f-tac"><span class="confirm">确定</span></div> -->
    </div>
</div>
 
<script>
    $(".renzheng-btn").click(function(){
        var json={"targetPage":"identification"};
        HandPlay.execNative(JSON.stringify(json))
    });

    //获取用户uid
    if(typeof(HandPlay)!="undefined"){
        var UID = HandPlay.getUserId();
        console.log( UID);
        //alert(UID);
    }else{
        var UID = qiaoxuekui.getUU();
    } 
    
    //兑换物品
    function btn(type){
        $.ajax({
            type:"POST",
            url:"/user/common/integralExchange?uid="+UID,
            dataType:"json",
            cache: false,
            error: function(){
                alert("未知错误");
            },
            success: function(msg){
                if(msg.error_code == 0){
                   $(".popup-box").show();
                }else if(msg.error_code == 1){
                   $(".popup-box").show();
                   $(".popup-box .popup .icon").attr("src","//cdn.16988.cn/res/html/images/sign/icon01.jpg")
                   $(".popup-box p.f-tac").html("");
                   $(".popup-box p.f-tac").append("您的积分不足<br>去做任务赚积分");
                   $(".popup-box .footer .confirm").html("确定");
                }
                
            }
        });
    }

  
        //popup-box
        $(".popup-btn").click(function(){
            $(".popup-box").show();
        });
        $(".close,.confirm").click(function(){
            $(".popup-box").hide();
        });

        //积分数量
        $.ajax({
            type:"POST",
            url:"/user/sign/add?uid="+UID,
            dataType:"json",
            cache: false,
            error: function(){
                alert("未知错误");
            },
            success: function(msg){
                if(msg.error_code == 0){
                    var num = msg.data;
                    $(".num").html(num.currentIntegral)
                }    
            }
        });

        //认证状态
        $.ajax({
            type:"POST",
            url:"/user/certification/query?uid="+UID,
            dataType:"json",
            cache: false,
            error: function(){
                alert("未知错误");
            },
            success: function(msg){
                if(msg.error_code == 0){
                   var renzheng = msg.data.info.uce_status;
                   //0:认证中，1认证通过，2认证不通过
                   if(renzheng == 1){
                        $(".renzheng-btn").addClass("exchange-btn-on");
                        $(".renzheng-btn").html("已认证");
                   }
                }
                
            }
        });
     
</script>
</body>
</html>