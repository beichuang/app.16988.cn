    <div class="music">

    </div>
    <audio src="http://couplet.sae.sinacdn.com/src/bg.mp3" id="bg" loop></audio>
    <script>
      window.onload = (function(){
                    var BG = document.getElementById('bg');
                        BG.loop = true;
                        BG.autoplay = true;
                        BG.play();
                     document.addEventListener("WeixinJSBridgeReady", function(){
                         BG.play();
                        //  BG.pause();
                        console.log('WeixinJSBridgeReady')
                     }, false);
                
                     BG.addEventListener('playing', function(){
                        console.log('playing')
                         $('.music').addClass('mplay');
                     }, false);
                
                     BG.addEventListener('pause', function(){
                        console.log('pause')
                         $('.music').removeClass('mplay');
                     }, false);
                     $('.music').click( function(){
                        if($(this).hasClass('mplay')) {
                            BG.pause();
                        } else {
                            BG.play();
                        }
                    }); 
                })();
    </script>
